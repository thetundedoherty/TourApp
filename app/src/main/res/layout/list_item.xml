<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_item"
    android:minHeight="@dimen/linear_layout_min_height">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"
        android:text="@string/title"
        android:layout_margin="@dimen/title_layout_margin"
        android:fontFamily="sans-serif-condensed"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_layout_height"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/image_view"/>

    <TextView
        android:id="@+id/overview_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"
        android:textSize="@dimen/overview_text_size"
        android:layout_margin="@dimen/overview_layout_margin"
        android:text="@string/overview"
        android:fontFamily="sans-serif-light"/>

</LinearLayout>